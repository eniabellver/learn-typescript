{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "./dist/types/es6",
        "outDir": "./dist/es6",
        "baseUrl": "./",
        "paths": {
            "*": ["node_modules", "src/types/*"]
        }
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}

