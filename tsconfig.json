{
    "compilerOptions": {
      "target": "ES6",
      "module": "ES6",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "strict": true,
      "sourceMap": true,
      "declaration": true,
      "declarationDir": "./dist/types",
      "rootDir": ".",
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*", "src/*", "src/types/*"]
      }
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }
  